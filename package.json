{
  "name": "londonfox-react-client-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for React client projects'",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-babel-server && npm run build-babel-client",
    "build-babel": "npm run build-babel-server && npm run build-babel-client",
    "build-babel-server": "babel src/server --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "clean": "rimraf dist node_modules",
    "start": "node ./dist/index.js",
    "test": "jest ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/londonfox/londonfox-react-client-boilerplate"
  },
  "author": "Charles Markovich",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "rimraf": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "prettier": "1.19.1"
  }
}
